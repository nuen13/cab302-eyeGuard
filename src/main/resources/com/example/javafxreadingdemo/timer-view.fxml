<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" styleClass="layout"
            xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafxreadingdemo.TimeAppController">
    <children>
        <!-- Logo Label -->

        <!-- Tool buttons -->
        <Button fx:id="analytics" layoutX="300" layoutY="10" text="Analytics" onAction="#onAnalyticsButtonClicked"/>
        <Button fx:id="setting" layoutX="400" layoutY="10" text="Settings" onAction="#gotosetting"/>

        <!-- Time       -->
        <Button fx:id="worktime" layoutX="150" layoutY="50" text="Work Time" onAction="#onworkTime"/>
        <Button fx:id="breaktime" layoutX="300" layoutY="50" text="Break Time" onAction="#onbreakTime"/>




        <!-- Quick Time Buttons -->
        <Button fx:id="lowBtn" layoutX="100" layoutY="90" text="Bursts (30 mins)" onAction ="#onLowClicked" />
        <Button fx:id="midBtn" layoutX="250" layoutY="90" text="Grind (45 mins)" onAction ="#onMidClicked" />
        <Button fx:id="highBtn" layoutX="400" layoutY="90" text="Cram (1 hour)" onAction ="#onHighClicked"/>

        <!--Time Label -->
        <Label fx:id="timerLabel" layoutX="180" layoutY="120" text="" style="-fx-font-size: 60px;"/>


        <!-- Time Settings -->
        <!--        <TextField fx:id="breakIntervalField" layoutX="10" layoutY="170" prefWidth="180" promptText="Enter break interval in seconds"/>-->
        <!--        <Button layoutX="200" layoutY="170" text="Set Break Interval" onAction="#onSetBreakIntervalButtonClicked"/>-->

        <!-- Timer and Action Buttons -->
        <Button fx:id="startBtn" layoutX="250" layoutY="200" text="Start" onAction="#StartTime"/>
        <!--        <Button fx:id="reset" layoutX="300" layoutY="200" text="Reset" onAction="#onResetButtonClicked"/>-->
    </children>
</AnchorPane>
